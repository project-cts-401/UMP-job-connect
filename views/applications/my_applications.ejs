    <div class="page-wrapper">

        <div class="breadcrumb-placeholder">
        </div>

        <div class="page-header">
            <h1>My Job Applications</h1>
        </div>

        <div class="tabs-container">
            <div class="tab">Quick Job Search</div>
            <div class="tab active">My Applications List</div>
        </div>

        <%# --- START: Pagination Controls (Identical Structure, Adapted Variables) --- %>
            <%# ****** Ensure totalApplications, currentPage, limit, totalPages, buildQueryString are passed from backend ****** %>
                <% if (typeof totalApplications !== 'undefined' && totalApplications > 0 && typeof currentPage !== 'undefined' && typeof totalPages !== 'undefined' && typeof buildQueryString !== 'undefined') { %>
                    <div class="pagination-controls">

                        <%# Results Count - Adapted for applications %>
                            <div class="results-count">
                                <%
                    const itemsPerPage = typeof limit !== 'undefined' ? limit : 10; // Use passed limit or default
                    const totalItems = totalApplications;
                    const startItem = Math.min((currentPage - 1) * itemsPerPage + 1, totalItems);
                    const endItem = Math.min(currentPage * itemsPerPage, totalItems);
                %>
                                    <span>Displaying <%= startItem %> - <%= endItem %> of <%= totalItems %> Applications</span>

                                    <%# Limit Dropdown structure kept (still commented out like original) %>
                                        <%# Requires JS or form wrap to function %>
                            </div>

                            <%# Pagination Links - Adapted for applications URL %>
                                <div class="pagination-links">
                                    <% if (totalPages > 1) { %>
                                        <nav aria-label="Application results pagination">
                                            <ul>
                                                <%# First Page Link %>
                                                    <li>
                                                        <% if (currentPage > 1) { %>
                                                            <a href="/applications/my?<%= buildQueryString({ page: 1 }) %>" title="First Page">&lt;&lt;</a>
                                                            <% } else { %> <span class="disabled">&lt;&lt;</span>
                                                                <% } %>
                                                    </li>
                                                    <%# Previous Page Link %>
                                                        <li>
                                                            <% if (currentPage > 1) { %>
                                                                <a href="/applications/my?<%= buildQueryString({ page: currentPage - 1 }) %>" title="Previous Page">&lt;</a>
                                                                <% } else { %> <span class="disabled">&lt;</span>
                                                                    <% } %>
                                                        </li>

                                                        <%# Page Number Links (Example logic kept) %>
                                                            <% if (currentPage > 2) { %>
                                                                <li><a href="/applications/my?<%= buildQueryString({ page: 1 }) %>">1</a></li>
                                                                <% if (currentPage > 3) { %>
                                                                    <li><span class="ellipsis">...</span></li>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% for (let i = Math.max(1, currentPage - 1); i <= Math.min(totalPages, currentPage + 1); i++) { %>
                                                                                <li>
                                                                                    <% if (i === currentPage) { %>
                                                                                        <span class="current-page"><%= i %></span>
                                                                                        <% } else { %>
                                                                                            <a href="/applications/my?<%= buildQueryString({ page: i }) %>">
                                                                                                <%= i %>
                                                                                            </a>
                                                                                            <% } %>
                                                                                </li>
                                                                                <% } %>
                                                                                    <% if (currentPage < totalPages - 1) { %>
                                                                                        <% if (currentPage < totalPages - 2) { %>
                                                                                            <li><span class="ellipsis">...</span></li>
                                                                                            <% } %>
                                                                                                <li>
                                                                                                    <a href="/applications/my?<%= buildQueryString({ page: totalPages }) %>">
                                                                                                        <%= totalPages %>
                                                                                                    </a>
                                                                                                </li>
                                                                                                <% } %>

                                                                                                    <%# Next Page Link %>
                                                                                                        <li>
                                                                                                            <% if (currentPage < totalPages) { %>
                                                                                                                <a href="/applications/my?<%= buildQueryString({ page: currentPage + 1 }) %>" title="Next Page">&gt;</a>
                                                                                                                <% } else { %> <span class="disabled">&gt;</span>
                                                                                                                    <% } %>
                                                                                                        </li>
                                                                                                        <%# Last Page Link %>
                                                                                                            <li>
                                                                                                                <% if (currentPage < totalPages) { %>
                                                                                                                    <a href="/applications/my?<%= buildQueryString({ page: totalPages }) %>" title="Last Page">&gt;&gt;</a>
                                                                                                                    <% } else { %> <span class="disabled">&gt;&gt;</span>
                                                                                                                        <% } %>
                                                                                                            </li>
                                            </ul>
                                        </nav>
                                        <% } %>
                                </div>
                    </div>
                    <% } %>
                        <%# --- END: Pagination Controls --- %>


                            <div class="jobs-content">
                                <h2>Applications</h2>
                                <%# Display Error if exists %>
                                    <% if (typeof error !== 'undefined' && error) { %>
                                        <p class="no-jobs error-message">
                                            <%= error %>
                                        </p>
                                        <% } %>

                                            <%# Display Table or No Applications message %>
                                                <%# ****** Ensure 'applications' array is passed from backend ****** %>
                                                    <% if (typeof applications !== 'undefined' && applications && applications.length > 0) { %>
                                                        <div class="table-responsive">
                                                            <table class="job-table-screenshot">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Job Title</th>
                                                                        <th>Date Applied</th>
                                                                        <th>Status</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <% applications.forEach(app => { %>
                                                                        <tr>
                                                                            <td>
                                                                                <a href="/jobs/<%= app.job_post_id %>" title="View Job Details">
                                                                                    <%= app.job_title || 'N/A' %>
                                                                                </a>
                                                                            </td>
                                                                            <td>
                                                                                <%# Format date as needed %>
                                                                                    <%= new Date(app.application_date).toLocaleDateString('en-ZA') %>
                                                                                        <%= new Date(app.application_date).toLocaleTimeString('en-ZA', { hour: '2-digit', minute:'2-digit' }) %>
                                                                            </td>
                                                                            <td class="status-<%= app.status %>">
                                                                                <%= app.status %>
                                                                            </td>
                                                                        </tr>
                                                                        <% }) %>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                        <% } else if (typeof error === 'undefined' || !error) { %>
                                                            <%# Show message only if no apps AND no error %>
                                                                <p class="no-jobs">You have not submitted any applications yet.</p>
                                                                <p style="text-align: center; margin-top: 20px;">
                                                                    <a href="/jobs" class="btn btn-primary">Browse Available Jobs</a>
                                                                </p>
                                                                <% } %>
                            </div>

                            <div class="footer-info" style="text-align: center; margin-top: 30px; font-size: 0.8em; color: #888;">
                                APP V7.40.1.3 <br> Last date:
                                <%= new Date().toLocaleDateString() %>
                                    <%= new Date().toLocaleTimeString() %>
                            </div>

    </div>
