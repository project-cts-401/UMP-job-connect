        }
        
        .status-Offered {
            color: #28a745;
            font-weight: bold;
        }
        
        .status-Rejected {
            color: #dc3545;
            font-weight: bold;
        }
        
        .status-Withdrawn {
            color: #6c757d;
            font-weight: bold;
        }
        
        .no-jobs {
