    <style>
        /* Basic placeholder styling - move to job-table-style.css */
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }
        
        .breadcrumb-placeholder {
            font-size: 0.85em;
            color: #666;
            margin-bottom: 15px;
        }
        
        .tabs-container {
            border-bottom: 1px solid #ccc;
            margin-bottom: 15px;
        }
        
        .tab {
            display: inline-block;
            padding: 10px 15px;
            border: 1px solid #ccc;
            border-bottom: none;
            background-color: #f8f8f8;
            color: #337ab7;
            cursor: pointer;
            margin-right: 3px;
            margin-bottom: -1px;
            border-radius: 4px 4px 0 0;
        }
        
        .tab.active {
            background-color: #fff;
            border-bottom: 1px solid #fff;
            color: #333;
            font-weight: bold;
        }
        
        .page-wrapper {
            color: #333;
        }
        
        .hero-title {
            font-size: 20px;
        }
        
        font .pagination-controls {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            font-size: 0.9em;
        }
        
        .pagination-links button,
        .pagination-links span {
            padding: 5px 8px;
            border: 1px solid #ccc;
            background-color: #fff;
            margin: 0 2px;
            cursor: pointer;
        }
        
        .pagination-links button:disabled {
            background-color: #eee;
            cursor: default;
        }
        
        .pagination-links span.current-page {
            font-weight: bold;
            background-color: #eee;
        }
        
        .results-count span {
            margin-right: 5px;
        }
        
        .results-count select {
            padding: 4px;
            border: 1px solid #ccc;
        }
    </style>
</head>

<body>
    <header class="header" data-header>
        <div class="container">

            <a href="#" class="logo">
