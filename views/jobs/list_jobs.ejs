<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- --------- UNICONS ---------- -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.8/css/line.css">

    <!-- --------- CSS ---------- -->
    <link rel="stylesheet" href="/css/Home.css">
    <!-- <link rel="stylesheet" href="/projects.css"> -->

    <!-- --------- FONT AWESOME ---------- -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" 
    integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ==" 
    crossorigin="anonymous" referrerpolicy="no-referrer" />
    

    <!-- --------- FAVICON ---------- -->
    <link rel="shortcut icon" href="assets/images/favicon.png" type="image/x-icon">

    <title>job-connect | home.</title>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');

        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body>
    <h1>Available Job Opportunities</h1>

     <% if (jobs && jobs.length > 0) { %>
        <% jobs.forEach(job => { %>
            <div class="job-listing">
                <h2><%= job.title %></h2>
                <div class="job-meta">
                    <span><strong>Type:</strong> <%= job.job_type %></span>
                    <span><strong>Department:</strong> <%= job.department || 'N/A' %></span>
                     <span><strong>Posted By:</strong> <%= job.admin_name %></span>
                    <span><strong>Posted On:</strong> <%= new Date(job.created_at).toLocaleDateString() %></span>
                    <% if(job.deadline) { %>
                         <span><strong>Deadline:</strong> <%= new Date(job.deadline).toLocaleDateString() %></span>
                    <% } %>
                </div>
                <p><%- job.description.substring(0, 150) %>...</p> <a href="/jobs/<%= job.id %>" class="view-details-btn">View Details & Apply</a>
            </div>
        <% }) %>
    <% } else { %>
        <p class="no-jobs">No open job positions available at the moment.</p>
    <% } %>

</body>
</html>