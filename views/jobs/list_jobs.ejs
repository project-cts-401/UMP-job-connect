        </div>

        <%# --- START: Modified Pagination Controls --- %>
            <div class="pagination-controls">

                <%# Results Count - Now uses pagination variables %>
                    <div class="results-count">
                        <% if (totalJobs > 0) { %>
                            <% 
                    const startItem = Math.min((currentPage - 1) * limit + 1, totalJobs);
                    const endItem = Math.min(currentPage * limit, totalJobs);
                    %>
                                <span>Displaying <%= startItem %> - <%= endItem %> of <%= totalJobs %></span>
                                <% } else { %>
                                    <span>Displaying 0 - 0 of 0</span>
                                    <% } %>

                                        <%# Limit Dropdown - Requires JS or wrapping form to function %>
                                            <%# Assuming it's inside a form with id="jobFilterForm" OR add specific JS %>



                    </div>

                    <%# Pagination Links - Only show if more than one page %>
                        <div class="pagination-links">
                            <% if (totalPages > 1) { %>
                                <nav aria-label="Job results pagination">
                                    <%# Use nav for semantics %>
                                        <ul>
                                            <%# First Page Link %>
                                                <li>
                                                    <% if (currentPage > 1) { %>
                                                        <a href="/jobs?<%= buildQueryString({ page: 1 }) %>" title="First Page">&lt;&lt;</a>
                                                        <% } else { %>
                                                            <span class="disabled">&lt;&lt;</span>
                                                            <% } %>
                                                </li>

                                                <%# Previous Page Link %>
                                                    <li>
                                                        <% if (currentPage > 1) { %>
                                                            <a href="/jobs?<%= buildQueryString({ page: currentPage - 1 }) %>" title="Previous Page">&lt;</a>
                                                            <% } else { %>
                                                                <span class="disabled">&lt;</span>
                                                                <% } %>
                                                    </li>

                                                    <%# Page Number Links (Simplified Example: Current +/- 1) %>
                                                        <%# You can expand this logic for more complex scenarios %>
                                                            <% if (currentPage > 2) { %>
                                                                <li><a href="/jobs?<%= buildQueryString({ page: 1 }) %>">1</a></li>
                                                                <% if (currentPage > 3) { %>
                                                                    <li><span class="ellipsis">...</span></li>
                                                                    <% } %>
                                                                        <% } %>

                                                                            <% for (let i = Math.max(1, currentPage - 1); i <= Math.min(totalPages, currentPage + 1); i++) { %>
                                                                                <li>
                                                                                    <% if (i === currentPage) { %>
                                                                                        <span class="current-page"><%= i %></span>
                                                                                        <% } else { %>
                                                                                            <a href="/jobs?<%= buildQueryString({ page: i }) %>">
                                                                                                <%= i %>
                                                                                            </a>
                                                                                            <% } %>
                                                                                </li>
                                                                                <% } %>

                                                                                    <% if (currentPage < totalPages - 1) { %>
                                                                                        <% if (currentPage < totalPages - 2) { %>
                                                                                            <li><span class="ellipsis">...</span></li>
                                                                                            <% } %>
                                                                                                <li>
                                                                                                    <a href="/jobs?<%= buildQueryString({ page: totalPages }) %>">
                                                                                                        <%= totalPages %>
                                                                                                    </a>
                                                                                                </li>
                                                                                                <% } %>


                                                                                                    <%# Next Page Link %>
                                                                                                        <li>
                                                                                                            <% if (currentPage < totalPages) { %>
                                                                                                                <a href="/jobs?<%= buildQueryString({ page: currentPage + 1 }) %>" title="Next Page">&gt;</a>
                                                                                                                <% } else { %>
                                                                                                                    <span class="disabled">&gt;</span>
                                                                                                                    <% } %>
                                                                                                        </li>

                                                                                                        <%# Last Page Link %>
                                                                                                            <li>
                                                                                                                <% if (currentPage < totalPages) { %>
                                                                                                                    <a href="/jobs?<%= buildQueryString({ page: totalPages }) %>" title="Last Page">&gt;&gt;</a>
                                                                                                                    <% } else { %>
                                                                                                                        <span class="disabled">&gt;&gt;</span>
                                                                                                                        <% } %>
                                                                                                            </li>
                                        </ul>
                                </nav>
                                <% } %>
                        </div>
            </div>
            <%# --- END: Modified Pagination Controls --- %>


                <div class="jobs-content">
                    <h2>Jobs</h2>

                    <%# Display Error if exists %>
                        <% if (error) { %>
                            <p class="no-jobs error-message">
                                <%= error %>
                            </p>
                            <% } %>

                                <%# Display Table or No Jobs message %>
                                    <% if (jobs && jobs.length > 0) { %>
                                        <div class="table-responsive">
                                            <table class="job-table-screenshot">
                                                <thead>
                                                    <tr>
                                                        <th>DATE OPENED</th>
                                                        <th>REQ ID #</th>
                                                        <th>JOB TITLE</th>
                                                        <th>LOCATION</th>
                                                        <th>JOB TYPE</th>
                                                        <th>ORGANISATIONAL UNIT</th>
                                                        <th>ADVERT CLOSED DATE</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% jobs.forEach(job => { %>
                                                        <tr>
                                                            <td>
                                                                <%= new Date(job.created_at).toLocaleDateString() %>
                                                            </td>
                                                            <td>
                                                                <%= job.id %>
                                                            </td>
                                                            <td>
                                                                <a href="/jobs/<%= job.id %>">
                                                                    <%= job.title %>
                                                                </a>
                                                            </td>
                                                            <td>
                                                                <%= job.location || 'N/A' %>
                                                            </td>
                                                            <td>
                                                                <%= job.job_type %>
                                                            </td>
                                                            <td>
                                                                <%= job.department || 'N/A' %>
                                                            </td>
                                                            <td>
                                                                <% if(job.deadline) { %>
                                                                    <%= new Date(job.deadline).toLocaleDateString() %>
                                                                        <% } else { %>
                                                                            N/A
                                                                            <% } %>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                        <% } else if (!error) { %>
                                            <%# Only show 'no jobs' if array is empty AND there was no DB error %>
                                                <p class="no-jobs">No open job positions available matching your criteria.</p>
                                                <% } %>
                </div>

                <div class="footer-info">
                    APP V7.40.1.3 <br> Last date:
                    <%= new Date().toLocaleDateString() %>
                        <%= new Date().toLocaleTimeString() %>
                </div>

