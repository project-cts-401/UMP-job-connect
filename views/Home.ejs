                  </div>
              </div>
          
        </section>
  
  
  
        <!-- 
          - #PROPERTY
        -->
  
        <section class="section property" aria-label="property">
          <div class="container">
  
            <h2 class="h2 section-title">Recent Job Postings</h2>
  
            <p class="section-text">
              Check out some of the latest opportunities available right here on campus. 
            </p>
  
            <ul class="property-list">
                <% if (locals.jobs && jobs.length > 0) { %>
                    <% jobs.forEach(function(job) { %>
                        <li>
                            <div class="property-card">
                                <figure class="card-banner img-holder" style="--width: 800; --height: 533;">
                                    <% 
                                        const jobImageMap = {
                                            'Tutor': '/images/tutor.jpg',
                                            'Technician': '/images/tech.jpg',
                                            'Mentor': '/images/mentor.jpg',
                                            'Research Assistant': '/images/research.jpg',
                                            'Admin Assistant': '/images/admin.jpg'
                                        };
                                        const jobImage = jobImageMap[job.job_type] || '/images/placeholder-job.jpg';
                                    %>
                                    <img src="https://www.ump.ac.za/CMSPages/GetFile.aspx?guid=d26e6308-9636-44db-9db7-b5af76c3d394" width="800" height="500" loading="lazy"
                                        alt="Image representing <%= job.title %> job" class="img-cover">
                                </figure>
            
                                <div class="card-content">
                                    <h3 class="h3">
                                        <a href="/jobs/<%= job.id %>" class="card-title"><%= job.title %></a>
                                    </h3>
            
                                    <ul class="card-list">
                                        <li class="card-item">
                                            <div class="item-icon">
                                              <i class="uil uil-suitcase"></i>
                                            </div>
                                            <span class="item-text"><%= job.job_type %></span>
                                        </li>
            
                                        <li class="card-item">
                                            <div class="item-icon">
                                              <i class="uil uil-building"></i>
                                            </div>
                                            <span class="item-text"><%= job.department || 'N/A' %></span>
                                        </li>
            
                                        <li class="card-item">
                                            <div class="item-icon">
                                              <i class="uil uil-calendar-alt"></i>
                                            </div>
                                            <span class="item-text"> Posted: <%= new Date(job.created_at).toLocaleDateString() %></span>
                                        </li>
            
                                        <% if (job.deadline) { %>
                                            <li class="card-item">
                                                <div class="item-icon">
                                                  <i class="uil uil-calendar-alt"></i>
                                                </div>
                                                <span class="item-text">Apply by: <%= new Date(job.deadline).toLocaleDateString() %></span>
                                            </li>
                                        <% } %>
                                    </ul>
            
                                    <div style="margin-top: 15px;">
                                        <a href="/jobs/<%= job.id %>" class="btn btn-secondary">View Details</a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    <% }); %>
                <% } else { %>
                    <p>No job postings currently available.</p>
                <% } %>
            </ul>
            <button class="____btn"><a href="/jobs"> <i class="uil uil-suitcase"></i> view all jobs</a></button>
  
          </div>
        </section>
